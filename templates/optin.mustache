    @example context (json):
    {
        "userpicture": "<img src='pic.jpg'>",
        "title": "Welcome, John!",
        "message": "Do you want to join the game?",
        "url_yes": "#",
        "url_no": "#",
        "str_yes": "Yes, join!",
        "str_no": "No thanks"
