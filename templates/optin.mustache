<div class="container text-center py-5">
    <div class="card shadow-lg mx-auto ph-optin-card">
        <div class="card-body p-5">
            <div class="mb-4">
                {{{userpicture}}}
            </div>
            <h2 class="mb-3">{{title}}</h2>
            <p class="text-muted mb-4 ph-optin-text">
                {{message}}
            </p>
           <div class="d-grid gap-2">
                <a href="{{url_yes}}" class="btn btn-primary btn-lg shadow-sm">
                    {{str_yes}}
                </a>
                
                <a href="{{url_no}}" class="btn btn-link text-muted btn-sm mt-3">
                    {{str_no}}
                </a>
            </div>
        </div>
    </div>
</div>
