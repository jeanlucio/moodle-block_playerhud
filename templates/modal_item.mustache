<div class="modal fade ph-modal-zindex" id="ph-item-modal-view" tabindex="-1" aria-labelledby="phModalTitleView" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header d-flex justify-content-between align-items-center">
        <h5 class="modal-title fw-bold m-0" id="phModalTitleView">{{#str}} details, block_playerhud {{/str}}</h5>
        <button type="button" class="btn-close ph-modal-close-view ms-auto"
                data-bs-dismiss="modal" data-dismiss="modal" aria-label="{{#str}} close, block_playerhud {{/str}}">
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="d-flex align-items-start">
            <div id="phModalImageContainerView" class="me-4 text-center ph-modal-img-container"></div>
            <div class="flex-grow-1">
                <div class="d-flex align-items-center flex-wrap mb-3">
                    <h4 id="phModalNameView" class="m-0 me-2 fw-bold"></h4>
                    <span id="phModalCountBadgeView" class="badge bg-dark rounded-pill me-2 ph-badge-count ph-display-none">x0</span>
                    <span id="phModalXPView" class="badge bg-info text-dark ph-badge-count">XP</span>
                </div>
                <div id="phModalDescView" class="text-muted text-break"></div>
               <div id="phModalDateView" class="mt-3 small text-success fw-bold border-top pt-2 ph-display-none">
                   <i class="fa fa-calendar-check-o" aria-hidden="true"></i> <span></span>
                </div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary ph-modal-close-view"
                data-bs-dismiss="modal" data-dismiss="modal">{{#str}} close, block_playerhud {{/str}}</button>
      </div>
    </div>
  </div>
</div>
