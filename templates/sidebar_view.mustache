{{!
    @template block_playerhud/sidebar_view

    Simplified view for the block sidebar.

    Example context (json):
    {
        "username": "John Doe",
        "xp": 150,
        "viewurl": "http://localhost/blocks/playerhud/view.php?id=2&instanceid=5"
    }
}}
<div class="block_playerhud_sidebar text-center">
    <div class="mb-2">
        <span class="fw-bold text-dark d-block">{{username}}</span>
        <span class="badge bg-primary rounded-pill">
            <i class="fa fa-star" aria-hidden="true"></i> {{xp}} XP
        </span>
    </div>

    <div class="d-grid gap-2 mt-3">
        <a href="{{{viewurl}}}" class="btn btn-outline-primary btn-sm shadow-sm" aria-label="{{#str}} openbackpack, block_playerhud {{/str}}">
            <i class="fa fa-briefcase" aria-hidden="true"></i> {{#str}} openbackpack, block_playerhud {{/str}}
        </a>
    </div>
</div>